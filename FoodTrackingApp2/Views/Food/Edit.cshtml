@model Food

<form method="post" asp-action="Edit">
    <div class = "border p-3 mt-4">
        <div class = "row pb-2">
            <h2 class = "text-primary"> Edit food record</h2>
            <hr />
        </div>
        <div class = "mb-3">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" class="form-control" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Meal" class="control-label"></label>
            <select asp-for="Meal" asp-items="Html.GetEnumSelectList<MealType>()" class="form-control"></select>
            <span asp-validation-for="Meal" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Carbohydrate" class="control-label"></label>
            <input asp-for="Carbohydrate" class="form-control" />
            <span asp-validation-for="Carbohydrate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Protein" class="control-label"></label>
            <input asp-for="Protein" class="form-control" />
            <span asp-validation-for="Protein" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Fat" class="control-label"></label>
            <input asp-for="Fat" class="form-control" />
            <span asp-validation-for="Fat" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Snacks" class="control-label"></label>
            <input asp-for="Snacks" class="form-control" />
            <span asp-validation-for="Snacks" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style = "width:150px"> Update </button>
        <a asp-controller = "Food" asp-action="Index" class = "btn btn-primary" style = "width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}



            